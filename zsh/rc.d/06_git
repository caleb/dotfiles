if [[ -x `which git` ]]; then
  alias g=git
  alias gl='git pull'
  alias gp='git push'
  alias gd='git diff'
  alias gc='git commit'
  alias gca='git commit -a'
  alias gco='git checkout'
  alias gb='git branch'
  alias gs='git status'
  alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
  alias gup="git fetch origin master && git rebase origin/master"

  # the recommended zstyle from _git() included with zsh
  zstyle ':completion::*:git-{name-rev,add,rm}:*' ignore-line true

  function git-branch-name () {
    git branch 2> /dev/null | grep '^\*' | sed 's/^\*\ //'
  }
  function git-dirty () {
    git status 2> /dev/null | grep "nothing to commit (working directory clean)"
    echo $?
  }
  function gsrb () {
    branch=$(git-branch-name) 
    git checkout master
    git svn rebase
    git checkout "${branch}"
    git rebase master
  }
  function git-need-to-push() {
    if pushtime=$(echo $1 | grep 'Your branch is ahead' 2> /dev/null); then
      echo "â†‘ "
    fi
  }
  function git-prompt() {
    gstatus=$(git status 2> /dev/null)
    branch=$(echo $gstatus | head -1 | sed 's/^# On branch //')
    dirty=$(echo $gstatus | sed 's/^#.*$//' | tail -2 | grep 'nothing to commit (working directory clean)'; echo $?)
    if [[ $branch != "" ]]; then
      dirty_color=$fg[green]
      push_status=$(git-need-to-push $gstatus 2> /dev/null)
      if [[ $dirty = 1 ]] { dirty_color=$fg[red] }
      [[ $branch != "" ]] && echo " %{$dirty_color%}$branch%{$reset_color%} $push_status"
    fi
  }
  function git-scoreboard () {
    git log | grep '^Author' | sort | uniq -ci | sort -r
  }
  function git-track () {
    branch=$(git-branch-name)
    git config branch.$branch.remote origin
    git config branch.$branch.merge refs/heads/$branch
    echo "tracking origin/$tracking"
  }
  function github-init () {
    git config branch.$(git-branch-name).remote origin
    git config branch.$(git-branch-name).merge refs/heads/$(git-branch-name)
  }
  
  function github-url () {
    git config remote.origin.url | sed -En 's/git(@|:\/\/)github.com(:|\/)(.+)\/(.+).git/https:\/\/github.com\/\3\/\4/p'
  }
  
  # Seems to be the best OS X jump-to-github alias from http://tinyurl.com/2mtncf
  if [[ -x `which open` ]]; then
    function github-go () {
      open $(github-url)
    }
  fi
  
  function nhgk () {
    nohup gitk --all &
  }
fi
