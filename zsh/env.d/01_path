# /usr/local - add bin and sbin to the beginning of the path
path=(/usr/local/sbin $path)
path=(/usr/local/bin $path)

# How to add a directory to the path if it doesn't already exist
# if [[ -z ${(M)path:#"/usr/local/sbin"} ]]; then
#   path=(/usr/local/sbin $path)
# fi

# ~/bin overrides everything
if [[ -d ~/bin && ! $path =~ "$HOME/bin" ]]; then
  path=(~/bin $path)
fi

# remove duplicate entries
typeset -U path
