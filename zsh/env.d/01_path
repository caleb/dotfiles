# /usr/local - add bin and sbin if the path doesn't already contain them
if [[ -z ${(M)path:#"/usr/local/sbin"} ]]; then
  path=(/usr/local/sbin $path)
fi
if [[ -z ${(M)path:#"/usr/local/bin"} ]]; then
  path=(/usr/local/bin $path)
fi

# ~/bin overrides everything
if [[ -d ~/bin && ! $path =~ "$HOME/bin" ]]; then
  path=(~/bin $path)
fi

# remove duplicate entries
typeset -U path
